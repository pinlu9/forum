<a href="/threads/new"><h1><i class="fa fa-comments-o fa-5x"></i></h1></a>

<% threads.forEach(function (thread) { %>


<div class="catalogy">

    <h1><%= thread.topic %></h1>
    <h4><%= thread.content %>@<%= currentUser %></h4>

      <div class="group">
      <a href="/authors/<%= thread.author %>"></a>

      <a href="/threads/<%= thread._id %>/show"><i class="fa fa-retweet"></i></a>

      <a href="/threads/<%= thread._id %>/edit"><i class="fa fa-pencil"></i></a>

      <a href="/threads/<%= thread._id %>?_method=UPDATED"><i class="fa fa-thumbs-o-up"></i></a>

      <form class="delete-form"
            action="/threads/<%= thread._id %>?_method=DELETE"
            method="post">
        <input id="delete-button" type="submit" value="Delete">

      </form>
    </div>
  </p>
</div>
<% }) %>

